extends ../layout


block content 
  h1 チーム作成

  - if(err)
    - errors = err.errors 

    ul.errors
      each error in errors
        li= error.message

  form.box(action=`/teams/`, method="post")
    _csrf

    div
      label チーム名
      input(name="name", value!=team.name)

    div.actions
      input(type="submit")